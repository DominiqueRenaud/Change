<rbs-field-label-title property="title" required="true"
	label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'label'), ['ucf']) }} / {{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'title'), ['ucf']) }}">
</rbs-field-label-title>

<rbs-field-text property="code"
	label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'code'), ['ucf']) }}">
</rbs-field-text>

<rbs-field-picker property="commercialSign"
		label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'commercialSign'), ['ucf']) }}"
		accepted-model="Rbs_Storelocator_CommercialSign">
</rbs-field-picker>

<rbs-field-rich-text property="description"
	label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'description'), ['ucf']) }}">
</rbs-field-rich-text>

<rbs-field-picker property="visual"
	label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'visual'), ['ucf']) }}"
	accepted-model="Rbs_Media_Image"
	selector-title="{{ i18nAttr('m.rbs.shipping.admin.mode_select_visual', ['ucf']) }}">
</rbs-field-picker>

<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'cartFilterData'), ['ucf']) }}">
	<div data-rbs-document-filter-container="" data-filter="document.cartFilterData">
		<div data-rbs-cart-filter-definitions=""></div>
	</div>
</rbs-field>

<rbs-field-picker-multiple property="deliveryZones"
	label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'deliveryZones'), ['ucf']) }}"
	accepted-model="Rbs_Geo_Zone">
</rbs-field-picker-multiple>

<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Storeshipping_RelayMode', 'trackingUrlTemplate'), ['ucf']) }}">
	<div class="input-group">
		<input type="text" class="form-control" data-ng-model="document.trackingUrlTemplate" />
		<div class="input-group-btn">
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
				{{ i18n('m.rbs.shipping.admin.variables', ['ucf']) }} <span class="caret"></span>
			</button>
			<ul class="dropdown-menu pull-right">
				<li>
					<a href="" data-ng-click="addVariable('trackingUrlTemplate', 'CODE')">
						{CODE} ({{ i18nAttr(propertyKey('Rbs_Order_Shipment', 'trackingCode')) }})
					</a>
				</li>
			</ul>
		</div>
	</div>
</rbs-field>

