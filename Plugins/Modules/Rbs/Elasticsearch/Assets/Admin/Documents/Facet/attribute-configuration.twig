<rbs-field property="attributeId" label="{{ i18nAttr('m.rbs.elasticsearch.admin.facet_configuration_field_attribute', ['ucf']) }}">
	<select data-ng-model="facet.parameters.attributeId"
			class="form-control" data-rbs-items-from-collection="Rbs_Elasticsearch_Collection_AttributeIds">
		<option value="">{{ i18n('m.rbs.admin.admin.select', ['ucf', 'etc']) }}</option>
	</select>
</rbs-field>

<rbs-field property="mappingName" label="{{ i18nAttr('m.rbs.elasticsearch.admin.facet_configuration_field_mapping_name', ['ucf']) }}">
	<input data-ng-model="facet.parameters.mappingName" type="text" class="form-control"/>
</rbs-field>

<rbs-field property="collectionId" label="{{ i18nAttr('m.rbs.elasticsearch.admin.facet_configuration_field_collection_id', ['ucf']) }}">
	<select data-ng-model="facet.parameters.collectionId" class="form-control"
			data-rbs-items-from-collection="Rbs_Elasticsearch_CollectionIds" >
		<option value="">{{ i18n('m.rbs.admin.admin.select', ['ucf', 'etc']) }}</option>
	</select>
</rbs-field>

<rbs-field property="showEmptyItem" label="{{ i18nAttr('m.rbs.elasticsearch.admin.facet_configuration_field_show_empty_item', ['ucf']) }}">
	<rbs-switch data-ng-model="facet.parameters.showEmptyItem"></rbs-switch>
</rbs-field>

<rbs-field property="renderingMode" label="{{ i18nAttr('m.rbs.elasticsearch.admin.facet_configuration_field_rendering_mode', ['ucf']) }}">
	<select data-ng-model="facet.parameters.renderingMode" class="form-control"
		data-rbs-items-from-collection="Rbs_Elasticsearch_FacetRenderingModes"
		data-rbs-items-collection-params="forType:attribute">
		<option value="">{{ i18n('m.rbs.admin.admin.select', ['ucf', 'etc']) }}</option>
	</select>
</rbs-field>

